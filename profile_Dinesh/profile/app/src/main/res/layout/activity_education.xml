<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:divider="?android:dividerHorizontal"
    android:showDividers="end"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Master in Electrical Engineering"
        android:textSize="18sp"
        android:layout_marginLeft="6dp"
        android:id="@+id/masterText"
        android:textColor="#222222"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sathyabama University"
        android:textSize="15sp"
        android:textColor="#555555"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masters in Physics"
        android:textSize="18sp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#222222" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oxford University"
        android:textSize="15sp"
        android:textColor="#555555"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bachelors in Electrical Engineering"
        android:textSize="18sp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:textColor="#222222"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sathyabama University"
        android:textSize="15sp"
        android:textColor="#555555"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

</LinearLayout>